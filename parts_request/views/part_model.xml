<odoo>
    <record id="view_part_service_wizard_form_inherit" model="ir.ui.view">
        <field name="name">view.part.service.wizard.form.inherit</field>
        <field name="model">part.service.wizard</field>
        <field name="inherit_id" ref="inventory_custom_tracking_installation_delivery.view_part_service_wizard_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form//group//field[@name='description']" position="after">
                <field name="coverage"/>
                <field name="amount" invisible="coverage != 'chargeable'"/>
            </xpath>
        </field>
    </record>
    <record id="view_task_form_inherit_parts_list" model="ir.ui.view">
        <field name="name">project.task.form.inherit.parts.list.coverage</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='parts_list']/field[@name='task_part_ids']/tree/field[@name='description']"
                   position="after">
                <field name="coverage"
                       decoration-success="coverage == 'foc'"
                       decoration-danger="coverage == 'chargeable'"/>
                <field name="amount"/>
                <field name="status" readonly="1"/>
            </xpath>
            <xpath expr="//page[@name='parts_list']/field[@name='task_part_ids']/tree/field[@name='description']"
                   position="attributes">
                <attribute name="optional">hide</attribute>
            </xpath>
            <xpath expr="//page[@name='parts_list']/field[@name='task_part_ids']/tree/field[@name='product_id']"
                   position="attributes">
                <attribute name="required">1</attribute>
            </xpath>
            <xpath expr="//page[@name='parts_list']/field[@name='task_part_ids']/tree/field[@name='last_update_date_time']"
                   position="attributes">
                <attribute name="optional">hide</attribute>
            </xpath>
            <xpath expr="//field[@name='task_part_ids']//tree/button[@name='open_part_service_wizard']"
                   position="attributes">
                <attribute name="string">Update</attribute>
            </xpath>
            <xpath expr="//field[@name='task_part_ids']//tree/button[@name='open_part_service_wizard']"
                   position="after">
                <field name="approval_requested" column_invisible="True"/>
                <field name="has_cancelled_quotation" column_invisible="True"/>
                <button string="Request"
                        type="object"
                        name="action_parts_request"
                        class="btn-success"
                        invisible="approval_requested == True"/>
                <button string="Create Quotation"
                        type="object"
                        name="action_create_quotation"
                        class="btn-success"
                        invisible="status != 'approved' or coverage != 'chargeable'"/>
                <button string="View Quotation"
                        type="object"
                        name="action_open_canceled_quotation"
                        class="btn-primary"
                        invisible="status != 'rejected' or has_cancelled_quotation == False or coverage != 'chargeable'"/>
            </xpath>
        </field>
    </record>
    <record id="view_order_form_inherit_hide_confirm_flag" model="ir.ui.view">
        <field name="name">sale.order.form.hide.confirm.by.flag</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="is_part_quotation" invisible="1"/>
            </xpath>
            <xpath expr="//header/button[@name='action_confirm']" position="attributes">
                <attribute name="invisible">state != 'sent' or is_part_quotation</attribute>
            </xpath>
            <xpath expr="//header/button[@name='action_confirm' and not(@id)]" position="attributes">
                <attribute name="invisible">state != 'draft' or is_part_quotation</attribute>
            </xpath>
        </field>
    </record>
    <record id="view_task_form2_inherit_invoice_quote" model="ir.ui.view">
        <field name="name">view.task.form2.inherit.invoice.quote</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="industry_fsm.view_task_form2_inherit"/>
        <field name="arch" type="xml">

            <!-- Add buttons after "action_view_customer_complaint_log" -->
            <xpath expr="//button[@name='action_view_customer_complaint_log']" position="after">
                <button name="action_open_quotation"
                        type="object"
                        class="oe_stat_button"
                        string="Quotation"
                        icon="fa-shopping-cart"
                        invisible="not is_fsm">
                    <field name="quotation_count" widget="statinfo" string="Quotations"/>
                </button>
                <button name="action_open_invoice"
                        type="object"
                        class="oe_stat_button"
                        string="Invoice"
                        icon="fa-fw fa-pencil-square"
                        invisible="not is_fsm">
                    <field name="fsm_invoice_count" widget="statinfo" string="Invoices"/>
                </button>
            </xpath>

        </field>
    </record>
</odoo>
